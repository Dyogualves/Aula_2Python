# DESENVOLVA UMA AFUNÇÃO PARA VER SE O BRASIL GANHOU A COPA DE 1998

def copa():
    pergunta = input('Digite um ano em que o Brasil ganhou a copa do mundo: ')
    copas = [1958, 1962, 1970, 1994, 2002]
    if pergunta in copas:
        print('o Brasil ganhou esse ano ', pergunta)
    else:
        print('Esse ano o Brasil não ganhou!')
    
    print(pergunta)
    
copa()


# DESENVOLVA UM SISTEMA DE RESTAURANTE, ONDE O CLIENTE TEM OPÇÃO DE ESCOLHER ENTRE SALADA, MACARRONADA, SANDUICHE, SORVETE.  PARAMETROS




def restaurante():
    print('''
    Olá sejá bem vindo !!!
    Escolha a opção Desejada: 
    DIGITE  1 SALADA - 2 MACARRONADA - 3 SANDUICHE  - 4 SORVETE 
    ''')
    escolha = input('')
    if escolha == '1':
        print('Você escolheu salada') 
    elif escolha == '2':
        print('Você escolheu Macarronada')  
    elif escolha == '3':
        print('Você escolheu sanduiche')  
    elif escolha == '4':
       print('Você escolheu sorvete')
    else:
         print('Não existe essa opção') 
            
  
restaurante()
  
  

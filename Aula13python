
# 1 CRIE UMA FUNÇÃO PARA COMPARAR 2 NÚMEROS, QUAL É DIVISIVEL POR 3. UTILIZE VARIÁVEIS LOCAIS.,,



def comparar():
    n1 = 7
    n2 = 5
     
    igual = n1 == n2
    print(igual)

comparar()




# 2 CRIE UM AFUNÇÃO PARA MULTIPLICAR 3 NUMEROS. UTILIZAR VARIAVEIS LOCAIS.

def multiplicar(a,b,c):
    print(a*b*c)

multiplicar(2,3,6)    



# 3 CRIE UMA FUNÇÃO PARA DESCOBRIR O VALOR ELEVADO DE UM NÚMERO. GLOBAIS

n1  = int(input('Digite um numero: '))
def elevado():
    quadrado = n1 ** 2
    print(quadrado)
elevado()

#4 UMA FUNÇÃO PARA MOSTRAR UMA MENSAGEM PERSONALIZADA NA TELA, 
# SE O USUÁRIO PARA DIGITAR, 18 ANOS

idade = int(input('Digite sua idade: '))

if idade >= 18:
    print('Maior de idade')
else: 
    print('Menor de idade')


# 5 DESENVOLVA UMA FUNÇÃO PARA DESCOBRIR A IDADE DE UMA PESSOA.UTILIZE PARAMETROS 


def idade1(ano_atual, data_nasc):
    calc = ano_atual - ano_nasc
    print(calc)
    
ano_nasc = int(input('Digite o ano do seu Nascimento:'))

idade1(2024, ano_nasc)    

